{
  "name": "@vivid-planet/react-loading",
  "version": "1.1.1",
  "description": "Loading wrapper component for react",
  "main": "./lib/index.js",
  "scripts": {
    "scss": "node-sass --output-style expanded --recursive scss/default.scss dist/react-loading.css",
    "build": "babel src --presets=es2015,react --out-dir lib",
    "clean": "rm -rf lib && rm -rf dist",
    "prepublish": "npm run clean && npm run build && npm run scss"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vivid-planet/react-loading.git"
  },
  "peerDependencies": {
    "react": "^15.6.1",
    "prop-types": "^15.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "node-sass": "^4.6.0"
  },
  "keywords": [
    "react",
    "reactjs",
    "loading"
  ],
  "author": "Alexander Kaufmann <ak@vivid-planet.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/vivid-planet/react-loading/issues"
  },
  "homepage": "https://github.com/vivid-planet/react-loading#readme"
}
